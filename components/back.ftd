-- component back:
caption company-name:
ftd.image-src logo:
optional string company-slogan:

-- ftd.column:
width.fixed.px: 700
height.fixed.px: 350
background.solid: $inherited.colors.background.base
border-width.px: 1
border-color: $inherited.colors.border

-- ftd.column:
width: fill-container
height: fill-container
background.image: $back-bg
align-content: center
color: $inherited.colors.text-strong

-- ftd.image: $back.logo
max-width.fixed.px: 100

-- ftd.text: $back.company-name
role: $inherited.types.heading-medium
width: fill-container
text-align: center
margin-top.px: 16

-- ftd.text: $back.company-slogan
role: $inherited.types.copy-regular
width: fill-container
text-align: center
margin-top.px: 5

-- end: ftd.column

-- end: ftd.column

-- end: back








-- ftd.background-image back-bg:
src: $assets.files.assets.back-bg.svg
size: cover
repeat: no-repeat
